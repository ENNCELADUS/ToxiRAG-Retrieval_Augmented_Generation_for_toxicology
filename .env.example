# ToxiRAG Environment Configuration
# Copy this file to .env and fill in your actual API keys and settings

# API Configuration
OPENAI_API_KEY=your_openai_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# ===== Models =====
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-5-nano
GEMINI_MODEL=gemini-2.5-flash
OPENAI_EMBED_MODEL=text-embedding-3-large

# ===== Vector DB =====
LANCEDB_URI=/home/richard/projects/ToxiRAG-Retrieval_Augmented_Generation_for_toxicology/tmp/toxirag_lancedb
COLLECTION_NAME=toxicology_docs

# ===== Retrieval / Generation =====
RETRIEVAL_TOP_K=5
RETRIEVAL_TEMPERATURE=0.1
MAX_TOKENS=2000

# ===== Data Processing =====
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
UNITS_VERSION=v1.0

# ===== Logging / Environment =====
LOG_LEVEL=INFO
LOG_FILE=/home/richard/projects/ToxiRAG-Retrieval_Augmented_Generation_for_toxicology/logs/toxirag.log
DEBUG=false
ENVIRONMENT=development